
<div class="about_box">
   <div class="box_content">
      <% flash.each do |type,message| %>
         <p class="flash_message"><%= message %></p>
      <% end %>
      <%= form_with url: login_path, method: :post, data:{turbo: false}, class: "form" do |form| %>
         <div class="form-group">
            <%= form.label :email, "Email:" %>
            <%= form.text_field :email, class: "form-control" %>
            <small id="emailHelp" class="form-text text-muted">We'll only share your email address with really, really hot attractive people.</small>
         </div>
         <div class="form-group">
            <%= form.label :password, "Password:" %>
            <%= form.text_field :password, class: "form-control", type: "password" %>
         </div>
         <br><br/>
         <%= form.submit "Log In", class: "btn btn-outline-primary" %>
      <% end %>
   </div>
</div>